            sc.associate_principal_with_portfolio(PortfolioId=pid,PrincipalARN=dus['ExecutionRole'],PrincipalType='IAM')
            did=c.create_domain(DomainName=dn,AuthMode='IAM',DefaultUserSettings=dus,SubnetIds=subnet_ids.split(','),VpcId=vpc_id)['DomainArn'].split('/')[-1]
            created=False
            while not created:
              response=c.describe_domain(DomainId=did)
              time.sleep(5)
              created=(response['Status']=='InService')
            return response
          def delete_domain(did):
            response=c.delete_domain(DomainId=did,RetentionPolicy={'HomeEfsFileSystem':'Delete'})
            deleted=False
            while not deleted:
              try:
                response=c.describe_domain(DomainId=did)
              except ClientError as error:
                deleted=(error.response['Error']['Code']=='ResourceNotFound')
              time.sleep(5)
            return response
          def update_domain(did,dus):
            response=c.update_domain(DomainId=did,DefaultUserSettings=dus)
