            update_domain(did,dus)
            cfnresponse.send(event,context,S,{'DomainId':did},physicalResourceId=event['PhysicalResourceId'])
          def create_studio_domain(config):
            sc=boto3.client('servicecatalog')
            vpc_id=config['VPC']
            subnet_ids=config['SubnetIds']
            dus=config['DefaultUserSettings']
            dn=config['DomainName']
            c.enable_sagemaker_servicecatalog_portfolio()
            response=sc.list_accepted_portfolio_shares()
            pid=''
