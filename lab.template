            efs_r=efs.describe_mount_targets(FileSystemId=r['HomeEfsFileSystemId'])
            sg_r=efs.describe_mount_target_security_groups(MountTargetId=efs_r['MountTargets'][0]['MountTargetId'])
            e=boto3.client('ec2').describe_security_groups(GroupIds=sg_r['SecurityGroups'])['SecurityGroups'][0]['IpPermissions'][0]['UserIdGroupPairs'][0]['GroupId']
            cfnresponse.send(event,context,S,{'DomainId':r['DomainId'],'EFSId':r['HomeEfsFileSystemId'],'SG':e},physicalResourceId=response['DomainId'])
          def handle_delete(event,context):
            domain_id=event['PhysicalResourceId']
